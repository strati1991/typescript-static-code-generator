{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./transformed",
    "baseUrl": "./src",
    "rootDir": "./src",
    "allowJs": true,
    "strictNullChecks": true,
    "plugins": [{"transform": "./src/transformer.ts", "type": "program"}]
  },
  "include": ["./src/test"],
  "exclude": ["node_modules"],
  "types": ["node", "mocha"]
}
